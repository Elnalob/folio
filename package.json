// Package.json - Project configuration and dependency management
// This file defines your project's metadata, scripts, and dependencies
{
  // Project name - used for npm publishing and identification
  "name": "vite-react-typescript-starter",
  
  // Private package - prevents accidental publishing to npm
  "private": true,
  
  // Version number - follows semantic versioning (major.minor.patch)
  "version": "0.0.0",
  
  // Module type - "module" enables ES6 import/export syntax
  // This is required for Vite and modern JavaScript
  "type": "module",
  
  // Scripts - commands you can run with "npm run <script-name>"
  "scripts": {
    // Start development server with hot reload
    // Usage: npm run dev
    "dev": "vite",
    
    // Build production-ready files
    // Usage: npm run build
    "build": "vite build",
    
    // Run ESLint to check code quality and style
    // Usage: npm run lint
    "lint": "eslint .",
    
    // Preview production build locally
    // Usage: npm run preview (run after npm run build)
    "preview": "vite preview",
    
    // Type check without emitting files
    // Usage: npm run typecheck
    "typecheck": "tsc --noEmit -p tsconfig.app.json"
  },
  
  // Production dependencies - included in the final build
  // These are required for your app to run
  "dependencies": {
    // Supabase client - for database and authentication
    "@supabase/supabase-js": "^2.57.4",
    
    // Lucide React - icon library with React components
    "lucide-react": "^0.344.0",
    
    // React - the core React library
    "react": "^18.3.1",
    
    // React DOM - React's DOM rendering library
    "react-dom": "^18.3.1"
  },
  
  // Development dependencies - only used during development and building
  // These are not included in the final production bundle
  "devDependencies": {
    // ESLint core - JavaScript/TypeScript linting
    "@eslint/js": "^9.9.1",
    
    // TypeScript type definitions for React
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    
    // Vite plugin for React support
    "@vitejs/plugin-react": "^4.3.1",
    
    // PostCSS plugin for vendor prefixes
    "autoprefixer": "^10.4.18",
    
    // ESLint - code linting and formatting
    "eslint": "^9.9.1",
    
    // ESLint plugin for React Hooks rules
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    
    // ESLint plugin for React Fast Refresh
    "eslint-plugin-react-refresh": "^0.4.11",
    
    // Global variables definitions for ESLint
    "globals": "^15.9.0",
    
    // PostCSS - CSS processing tool
    "postcss": "^8.4.35",
    
    // Tailwind CSS - utility-first CSS framework
    "tailwindcss": "^3.4.1",
    
    // TypeScript compiler
    "typescript": "^5.5.3",
    
    // TypeScript ESLint integration
    "typescript-eslint": "^8.3.0",
    
    // Vite - fast build tool and dev server
    "vite": "^5.4.2"
  }
  
  /*
    Version number prefixes:
    ^ (caret) - allows minor and patch updates (^1.2.3 allows 1.x.x but not 2.0.0)
    ~ (tilde) - allows only patch updates (~1.2.3 allows 1.2.x but not 1.3.0)
    No prefix - exact version only
    
    Common npm commands:
    npm install - install all dependencies
    npm install <package> - add to dependencies
    npm install <package> --save-dev - add to devDependencies
    npm update - update all packages to latest allowed versions
    npm audit - check for security vulnerabilities
  */
}
